<%-include('head')%>
</head>
<body style="text-align: center;">
  <%if(typeof errMsg !== 'undefined' && errMsg && errMsg.length >0){%>
    <div style="border: 2px solid red; background-color: aquamarine;">
      <ul>
        <%errMsg.forEach(errMsg => {%>
          <li><%= errMsg%></li>
        <%});%>
      </ul>
    </div>
  <%}%>
<form method='POST' action='/signup'>
  <div style=" margin-left: 2rem; margin-top: 3rem; ">  


          <div>
                <label for="firstName">First Name:</label>
                <input type="text" id="firstName" name="firstName" placeholder="Enter your First Name"
                value="<%= typeof oldInput !== 'undefined' ? oldInput.firstName : '' %>" required />

                <br><br>

                <label for="secondName">Second Name:</label>
                <input type="text" id="secondName" name="secondName" placeholder="Enter your Second Name"
                value="<%= typeof oldInput !== 'undefined' ? oldInput.secondName : '' %>" />

                <br><br>

                <label for="password">Password:</label>
                <input type="password" id="password" name="password" placeholder="Enter your password" required>
                <br><br>
                
                <label for="confirm-password">Confirm Password:</label>
                <input type="password" id="confirm-password" name="confirm-password" placeholder="Confirm Password" required>
                <br><br>

                <input type='submit' value='submit'>
          </div>
  </div>
</form>
<br>
<a href="/">Back to Home</a>
</body>
</html>